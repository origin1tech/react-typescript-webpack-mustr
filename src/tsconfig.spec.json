{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "../dist",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ]
}